<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect semua permintaan ke index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Blokir akses langsung ke file environment dan konfigurasi sensitif
<FilesMatch "(\.(env|json|lock|md|gitignore|gitattributes|htaccess|htpasswd))$">
    Require all denied
</FilesMatch>
